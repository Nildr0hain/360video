{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Admin' %}

{% block pageContent %}
        <div id="AdminMain" class="clearfix">  
            <p>Welcome <strong>{{ user|capitalize }}</strong></p>
            
            <div id="AdminLeftBar" class="clearfix">  
                <h2><a href="{{ path('admin') }}">Board</a></h2> 
                <h2><a href="{{ path('internships') }}" class="active">Internships</a></h2>     
                <h2><a href="{{ path('addInternship') }}">Add internship</a></h2>  
                <h2><a href="{{ path('profile') }}">Profile</a></h2> 
                <h2><a href="{{ path('logout') }}">Logout</a></h2>    
            </div>   
            
            <div id="AdminRightBar" class="clearfix">                
                {% if internship %}
                <h2><a href="{{ path('internships') }}details?id={{ internship.id }}">{{ internship.title }}</a></h2>  
                    <ul class="clearfix">                            
                            <li class="AdminStage">        
                                                          
                                <a href="{{ path('internships') }}delete?id={{ internship.id }}" class="delete">Delete</a>  
                                <a href="{{ path('internships') }}edit?id={{ internship.id }}" class="edit">Edit</a>      
                                <a href="{{ path('internships') }}details?id={{ internship.id }}" class="view">View</a>    
                                
                                <p class="date">{{ internship.date_posted }} - {{ internship.date_expires }}</p> 
                                
                                <p>{{ internship.description|raw  }}</p>
                               
                                 <section class="summ">
                                    <p>Qualifications : </p>  
                                    {{ qual|raw   }} 
                                    <p>Diploma : </p>  
                                    <p class="objects">{{ internship.diploma }}</p> 
                                    <p class="objects">{{ internship.year }} jaar</p> 
                                    <p>Sector : </p>  
                                    <p class="objects">{{ internship.sector }}</p> 
                                                         
                                </section>        
                                
                                
                                <div class="info">                                                                       
                                    <p>Location: {{ internship.location_street }} - {{ internship.location_city }} - {{ internship.location_country }}</p>
                                    <p>Contact: {{ internship.name }}</p>
                                </div>
                            </li>                           
                    </ul>
		{% else %}          
                    <p>No internships to show!</p>
		{% endif %}                     
            </div>             
            
        </div>         
{% endblock %}
        