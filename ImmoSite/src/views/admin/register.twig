{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Admin' %}

{% block pageContent %}            
            <div class="main">
                <div class="container">
                    <div class="row">      	
                        <div class="span6">      		
                            <div id="loginWithBot" class="widget stacked">					
				<div class="widget-header">
					<i class="icon-pencil"></i>
					<h3>Register!</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
					
					<form action="#" method="post" {{ form_enctype(registerform) }} novalidate="novalidate">
                                            <dl class="clearfix">                                                
                                                <dt>
                                                        {{ form_label(registerform.company) }}
                                                </dt>
                                                <dd>
                                                        {{ form_widget(registerform.company) }}
                                                        {{ form_errors(registerform.company) }}
                                                </dd>                                                
                                                <dt>
                                                        {{ form_label(registerform.name) }}
                                                </dt>
                                                <dd>
                                                        {{ form_widget(registerform.name) }}
                                                        {{ form_errors(registerform.name) }}
                                                </dd>                                                
                                                <dt>
                                                        {{ form_label(registerform.email) }}
                                                </dt>
                                                <dd>
                                                        {{ form_widget(registerform.email) }}
                                                        {{ form_errors(registerform.email) }}
                                                </dd>
                                                
                                                <dt>
                                                        {{ form_label(registerform.password) }}
                                                </dt>
                                                <dd>
                                                        {{ form_widget(registerform.password) }}
                                                        {{ form_errors(registerform.password) }}
                                                </dd>
                                                <dt>
                                                        &nbsp;
                                                </dt>
                                                <dd>
                                                        {{ form_widget(registerform._token) }}
                                                        <input type="submit" name="submit" value="Register" />
                                                </dd>
                                            </dl>
                                        </form>  
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                       <div id="loginWithoutBot" class="span6">      		
                            <div  class="widget stacked">					
				<div class="widget-header">
					<i class="icon-unlock"></i>
					<h3>Got an account?</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
                                    <a href="{{ path('admin') }}">Log in!</a>
					
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                        <div class="span6">      		
                            <div class="widget stacked">					
				<div class="widget-header">
					<i class="icon-ok  "></i>
					<h3>Done here?</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
                                    <a href="{{ path('home') }}">Back to the front-end! </a>
					
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                    </div> 
                </div> 
            </div> 




            
                        
{% endblock %}
