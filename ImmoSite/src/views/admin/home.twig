{# extend the parent tpl #}
{% extends 'layoutPublic.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Admin' %}

{% block pageContent %}            
            <div class="main">
                <div class="container">
                    <div class="row">      	
                        <div class="span6">      		
                            <div id="loginWithBot" class="widget stacked">					
				<div class="widget-header">
					<i class="icon-unlock "></i>
					<h3>Sign in</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
					
                                    <form action="#" method="post" {{ form_enctype(loginform) }} novalidate="novalidate">
                                        <dl class="clearfix">
                                            <dt>
                                                    {{ form_label(loginform.username) }}
                                            </dt>
                                            <dd>
                                                    {{ form_widget(loginform.username) }}
                                                    {{ form_errors(loginform.username) }}
                                            </dd>
                                            <dt>
                                                    {{ form_label(loginform.password) }}
                                            </dt>
                                            <dd>
                                                    {{ form_widget(loginform.password) }}
                                                    {{ form_errors(loginform.password) }}
                                            </dd>
                                            <dt>
                                                    &nbsp;
                                            </dt>
                                            <dd>
                                                    {{ form_widget(loginform._token) }}
                                                    <input class="btn btn-primary btn-large" type="submit" name="submit" value="Sign in" />
                                            </dd>
                                        </dl>
                                    </form>
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                       <div id="loginWithoutBot" class="span6">      		
                            <div  class="widget stacked">					
				<div class="widget-header">
					<i class="icon-user "></i>
					<h3>New here?</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
                                    <a href="{{ path('register') }}">Become a member!</a>
					
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                        <div class="span6">      		
                            <div class="widget stacked">					
				<div class="widget-header">
					<i class="icon-ok  "></i>
					<h3>Done here?</h3>
				</div> <!-- /widget-header -->
				
				<div class="widget-content">
                                    <a href="{{ path('home') }}">Back to the front-end! </a>
					
				</div> <!-- /widget-content -->			
                            </div> <!-- /widget -->
                        </div> 
                            
                    </div> 
                </div> 
            </div> 




            
                        
{% endblock %}
